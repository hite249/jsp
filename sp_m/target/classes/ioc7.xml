<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd">
	<bean id="programmer" class="com.test.ioc.ch2.Programmer" />
	<bean id="designer" class="com.test.ioc.ch2.Designer" />
	<bean id="working" class="com.test.ioc.ch2.Working">
		<!-- 세터주입을 의미 -->
		<property name="emp">
			<!-- 이부분을 수정하면 소스수정없이 maker 교체가능 -->
			<ref bean="designer" />
		</property>
	</bean>
	<context:component-scan base-package="com.test.ioc.ch2"/>
</beans>
