<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

	<bean id="hyundai" class="com.test.ioc.ch2.Hyundai" />
	<bean id="samsung" class="com.test.ioc.ch2.Samsung" />
	<bean id="kia" class="com.test.ioc.ch2.Kia" />
	<bean id="orderManager" class="com.test.ioc.ch2.OrderManger">
		<!-- 세터주입을 의미 -->
		<property name="maker">
			<!-- 이부분을 수정하면 소스수정없이 maker 교체가능 -->
			<ref bean="kia" />
		</property>
	</bean>
</beans>
